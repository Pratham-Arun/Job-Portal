@model JobPortal.ViewModels.JobPostViewModel
@{
    ViewData["Title"] = "Post Job";
    var skills = ViewBag.Skills as List<JobPortal.Models.Skill>;
}

<h2>Post a New Job</h2>

<div class="row">
    <div class="col-md-8">
        <form asp-action="PostJob" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title">Job Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description">Job Description</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Required Skills</label>
                <div class="row">
                    @if (skills != null)
                    {
                        @foreach (var skill in skills)
                        {
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="RequiredSkills" value="@skill.Id" id="reqskill_@skill.Id" />
                                    <label class="form-check-label" for="reqskill_@skill.Id">@skill.Name</label>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Post Job</button>
                <a href="/Employer/Dashboard" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>