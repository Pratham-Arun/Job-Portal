@model IEnumerable<JobPortal.Models.User>
@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td><span class="badge bg-secondary">@user.Role</span></td>
                    <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                    <td>
                        @if (user.Id != Context.Session.GetInt32("UserId"))
                        {
                            <form method="post" asp-action="DeleteUser" class="d-inline">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user? This will also delete all their related data.')">Delete</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">Current User</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No users found.</div>
}

<a href="/Admin/Dashboard" class="btn btn-secondary">Back to Dashboard</a>