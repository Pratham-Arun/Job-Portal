@model JobPortal.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
    var skills = ViewBag.Skills as List<JobPortal.Models.Skill>;
}

<h2>Edit Profile</h2>
<form asp-action="EditProfile" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Degree">Degree</label>
        <input asp-for="Degree" class="form-control" />
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Course">Course</label>
        <input asp-for="Course" class="form-control" />
        <span asp-validation-for="Course" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Your Skills</label>
        <div class="row">
            @if (skills != null)
            {
                @foreach (var skill in skills)
                {
                    <div class="col-md-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SelectedSkills" value="@skill.Id"
                                   id="skill_@skill.Id" @(Model.SelectedSkills.Contains(skill.Id) ? "checked" : "") />
                            <label class="form-check-label" for="skill_@skill.Id">@skill.Name</label>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Profile</button>
        <a href="/Applicant/Dashboard" class="btn btn-secondary">Cancel</a>
    </div>
</form>
