@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Job Portal</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        .skill-badge {
            margin: 2px;
        }

        .match-score {
            font-weight: bold;
        }

        .status-pending {
            color: #ffc107;
        }

        .status-accepted {
            color: #198754;
        }

        .status-rejected {
            color: #dc3545;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">Job Portal</a>
                <div class="navbar-nav ms-auto">
                    @{
                        var session = HttpContextAccessor.HttpContext.Session;
                        var userName = session.GetString("UserName");
                        var userRole = session.GetString("UserRole");
                    }
                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <span class="navbar-text me-3">Hello, @userName!</span>
                        @if (userRole == "admin")
                        {
                            <a class="nav-link" href="/Admin/Dashboard">Admin Dashboard</a>
                        }
                        else if (userRole == "employer")
                        {
                            <a class="nav-link" href="/Employer/Dashboard">Employer Dashboard</a>
                        }
                        else if (userRole == "applicant")
                        {
                            <a class="nav-link" href="/Applicant/Dashboard">My Applications</a>
                            <a class="nav-link" href="/Applicant/Jobs">Browse Jobs</a>
                            <a class="nav-link" href="/Applicant/EditProfile">Edit Profile</a>
                        }
                        <a class="nav-link" href="/Account/Logout">Logout</a>
                    }
                    else
                    {
                        <a class="nav-link" href="/Account/Login">Login</a>
                        <a class="nav-link" href="/Account/Register">Register</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-3">@TempData["Error"]</div>
            }
            @RenderBody()
        </main>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
